<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_movie_frame_layout"
    tools:context=".views.activitys.DetailMovieActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/detail_movie_progress_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/detai_movie_poster_background_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_movie_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:theme="@style/ToolbarColoredBackArrow"
            />

        <ImageView
            android:id="@+id/detai_movie_poster_avt_img"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/detai_movie_poster_background_img"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            />

        <Button
            android:id="@+id/detail_movie_preview_trailer_btn"
            android:layout_toRightOf="@+id/detai_movie_poster_avt_img"
            android:layout_margin="16dp"
            android:layout_below="@+id/ratings"
            android:text="trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_movie_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detai_movie_poster_background_img"
            android:layout_margin="16dp"
            android:layout_toRightOf="@+id/detai_movie_poster_avt_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detail_movie_release_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_movie_title_txt"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/detai_movie_poster_avt_img"
            />

        <TextView
            android:id="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_movie_title_txt"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/detail_movie_release_date_txt"
            android:text="Rating:" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/detail_movie_rating_txt"
            android:layout_below="@+id/detail_movie_title_txt"
            android:layout_toRightOf="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_movie_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detai_movie_poster_avt_img"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_movie_introduce_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_movie_introduce"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/detail_movie_cast_crew"
            android:layout_below="@+id/detail_movie_introduce_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_movie_recycler_view"
            android:layout_below="@+id/detail_movie_cast_crew"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</ScrollView>
</FrameLayout>